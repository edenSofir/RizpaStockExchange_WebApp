<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>stockExchange.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>stockExchange.servlets.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>stockExchange.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockTableServlet</servlet-name>
        <servlet-class>stockExchange.servlets.StockTableServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoryListServlet</servlet-name>
        <servlet-class>stockExchange.servlets.HistoryListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadXmlServlet</servlet-name>
        <servlet-class>stockExchange.servlets.LoadXmlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BankAccountServlet</servlet-name>
        <servlet-class>stockExchange.servlets.BankAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserNameServlet</servlet-name>
        <servlet-class>stockExchange.servlets.UserNameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadMoneyServlet</servlet-name>
        <servlet-class>stockExchange.servlets.LoadMoneyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockDataServlet</servlet-name>
        <servlet-class>stockExchange.servlets.StockDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStockHeadingPageServlet</servlet-name>
        <servlet-class>stockExchange.servlets.UpdateStockHeadingPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStockTablePageServlet</servlet-name>
        <servlet-class>stockExchange.servlets.UpdateStockTablePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStockTransactionPageServlet</servlet-name>
        <servlet-class>stockExchange.servlets.UpdateStockTransactionPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateHoldingsUserStockServlet</servlet-name>
        <servlet-class>stockExchange.servlets.UpdateHoldingsUserStockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateNewCompanyServlet</servlet-name>
        <servlet-class>stockExchange.servlets.CreateNewCompanyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>stockExchange.servlets.ChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendChatServlet</servlet-name>
        <servlet-class>stockExchange.servlets.SendChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateSellTableServlet</servlet-name>
        <servlet-class>stockExchange.servlets.UpdateSellTableServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateBuyTableServlet</servlet-name>
        <servlet-class>stockExchange.servlets.UpdateBuyTableServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateNewCommandServlet</servlet-name>
        <servlet-class>stockExchange.servlets.CreateNewCommandServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserMessageServlet</servlet-name>
        <servlet-class>stockExchange.servlets.UserMessageServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/usersList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StockTableServlet</servlet-name>
        <url-pattern>/StockTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateNewCompanyServlet</servlet-name>
        <url-pattern>/pages/secondPage/CreateNewCompany</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadXmlServlet</servlet-name>
        <url-pattern>/pages/secondPage/loadXml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StockDataServlet</servlet-name>
        <url-pattern>/pages/secondPage/loadDataPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStockHeadingPageServlet</servlet-name>
        <url-pattern>/stockHeadingName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStockTablePageServlet</servlet-name>
        <url-pattern>/dataTab</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStockTransactionPageServlet</servlet-name>
        <url-pattern>/transactionsTab</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateHoldingsUserStockServlet</servlet-name>
        <url-pattern>/userHoldings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/pages/secondPage/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatServlet</servlet-name>
        <url-pattern>/Chat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendChatServlet</servlet-name>
        <url-pattern>/pages/chatRoom/sendChat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BankAccountServlet</servlet-name>
        <url-pattern>/pages/secondPage/BankAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserNameServlet</servlet-name>
        <url-pattern>/userNameSpan</url-pattern>
        <url-pattern>/pages/secondPage/userNameSpan</url-pattern>
        <url-pattern>/pages/chatRoom/userNameSpan</url-pattern>
        <url-pattern>/pages/thirdPage/userNameSpan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoryListServlet</servlet-name>
        <url-pattern>/HistoryTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadMoneyServlet</servlet-name>
        <url-pattern>/pages/bankAccountPage/LoadMoney</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateSellTableServlet</servlet-name>
        <url-pattern>/sellTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateBuyTableServlet</servlet-name>
        <url-pattern>/buyTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateNewCommandServlet</servlet-name>
        <url-pattern>/pages/thirdPage/CreateNewCommand</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserMessageServlet</servlet-name>
        <url-pattern>/usersMessages</url-pattern>
    </servlet-mapping>
</web-app>